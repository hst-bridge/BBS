<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <connectionStrings>
    <add name="BudBackup2Context" providerName="System.Data.SqlClient" connectionString="Data Source=FDB9;Initial Catalog=BudBackup2;Persist Security Info=True;User ID=sa;Password=u571@wang;Pooling=False" />
  </connectionStrings>
  <appSettings>
    <add key="CopyListenTime" value="1" />
    <!-- コピースレッド指定 -->
    <add key="MTNum" value="8" />
    <!-- コピー失敗の再コピー回数 -->
    <add key="RNum" value="3" />
    <!-- RETRYの待ち時間 20秒-->
    <add key="WNum" value="20" />
    <!-- 同期化の時間-->
    <add key="SynchronizingTime" value="10000" />
    <!-- メールの配信アドレス-->
    <add key="ToMail" value="jiangtao@bridge.vc,wangdan@hstech-china.com,wangdan@bridge.vc" />
  </appSettings>
  <log4net>
    <root>
      <!-- ここではINFOログのレベルを指定 -->
      <level value="ALL" />
      <!-- 下記の何れかを使用
      <level value="OFF " />
      <level value="FATAL" />
      <level value="ERROR" />
      <level value="WARN" />
      <level value="INFO" />
      <level value="DEBUG" />
      <level value="ALL" />
      -->
      <!-- どのログ出力先を使用するか -->
      <appender-ref ref="RollingFileAppender" />
    </root>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log\\log_" />
      <param name="DatePattern" value="yyyyMMdd&quot;.log&quot;" />
      <param name="RollingStyle" value="date" />
      <param name="StaticLogFileName" value="false" />
      <param name="AppendToFile" value="true" />
      <param name="MaximumFileSize" value="10MB" />
      <param name="MaxSizeRollBackups" value="10" />
      <param name="Encoding" value="UTF-8" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="発生時間:%date  スレッドID:[%thread]  ログ等位:[%-5level]  メッセージ: %message%  所属クラス:%logger %file(%line) %class %method%n" />
      </layout>
    </appender>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
  </startup>
</configuration>